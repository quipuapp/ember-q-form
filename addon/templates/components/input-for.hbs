{{#if label}}
  <label class="{{labelClasses}}" for={{inputId}}>{{label}}</label>
{{/if}}

<input
  id={{inputId}}
  type="{{unbound type}}"
  value={{get data field}}
  oninput={{action (mut (get data field)) value="target.value"}}
  onblur={{action (mut showErrors) true}}
  autofocus={{autofocus}}
  disabled={{disabled}}
  maxlength={{maxlength}}
  placeholder={{placeholder}}
  required={{required}}>

{{#if showErrors}}
  {{#if (get (get data.validations.attrs field) 'messages') }}
    <div class="errors">
      {{#each (get (get data.validations.attrs field) 'messages') as |errorMessage|}}
        <span class="error">{{errorMessage}}</span>
      {{/each}}
    </div>
  {{/if}}
{{/if}}
